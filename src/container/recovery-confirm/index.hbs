{{!
Це код container файлу для signup сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
    <header>
        {{> back-button}}
    </header>

    <form class="page__section">
        <h1 class="page__title">Відновлення паролю</h1>

        <div class="form">
            <div class="form__item">
                {{> field action="recoveryConfirmForm.change" label="Ваш код" type="number" name="code" placeholder="Ваш
                код" }}
                <span name="email" class="form__error">Помилка</span>
            </div>
            <div class="form__item">
                {{> field-password action="recoveryConfirmForm.change" label="Новий пароль" name="password"
                placeholder="Введіть
                новий пароль" }}
                <span name="password" class="form__error">Помилка</span>
            </div>
            <div class="form__item">
                {{> field-password action="recoveryConfirmForm.change" label="Новий пароль ще раз" name="passwordAgain"
                placeholder="Введіть новый пароль ще раз" }}
                <span name="passwordAgain" class="form__error">Помилка</span>
            </div>
        </div>

        <button onclick="recoveryConfirmForm.submit()" class="button" type="button">Змінити пароль</button>

        <span class="alert alert--disabled">Увага! Помилка!</span>


    </form>
</div>

